{{!
    @template local_casospracticos/case_view

    Template for displaying a single practical case with questions.

    Context variables required for this template:
    * case - Case object with name, statement, status, questions array
    * canedit - Boolean for edit capability
    * caninsert - Boolean for insert into quiz capability

    Example context (json):
    {
        "case": {
            "id": 1,
            "name": "Caso sobre silencio administrativo",
            "statement": "<p>Enunciado largo...</p>",
            "status": "published",
            "statusclass": "bg-success",
            "statuslabel": "Publicado",
            "questioncount": 3,
            "totalmarks": 3.0
        },
        "questions": [
            {
                "id": 1,
                "number": 1,
                "questiontext": "¿Cuál es el plazo?",
                "qtype": "multichoice",
                "qtypelabel": "Opción múltiple",
                "defaultmark": 1.0,
                "answers": [
                    {"id": 1, "answer": "3 meses", "iscorrect": true, "fraction": 100},
                    {"id": 2, "answer": "6 meses", "iscorrect": false, "fraction": 0}
                ]
            }
        ],
        "canedit": true,
        "caninsert": true
    }
}}
<div class="local-casospracticos-case-view" data-caseid="{{case.id}}" role="article" aria-labelledby="case-title-{{case.id}}">
    {{! Case Header }}
    <div class="case-header mb-4 pb-3 border-bottom">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h2 class="mb-2" id="case-title-{{case.id}}">{{case.name}}</h2>
                <span class="badge {{case.statusclass}}" role="status">{{case.statuslabel}}</span>
                {{#case.difficulty}}
                <span class="badge bg-info ms-2" aria-label="{{#str}}difficulty, local_casospracticos{{/str}} {{case.difficulty}} {{#str}}outof, core{{/str}} 5">
                    {{#str}}difficulty, local_casospracticos{{/str}}: {{case.difficulty}}/5
                </span>
                {{/case.difficulty}}
            </div>
            <nav class="case-actions btn-group" role="toolbar" aria-label="{{#str}}caseactions, local_casospracticos{{/str}}">
                {{#canedit}}
                <a href="{{editurl}}" class="btn btn-outline-primary">
                    {{#pix}}t/edit, core{{/pix}} {{#str}}editcase, local_casospracticos{{/str}}
                </a>
                <a href="{{newquestionurl}}" class="btn btn-outline-success">
                    {{#pix}}t/add, core{{/pix}} {{#str}}newquestion, local_casospracticos{{/str}}
                </a>
                {{/canedit}}
                {{#case.hasquestions}}
                <a href="{{practiceurl}}" class="btn btn-info">
                    {{#pix}}i/preview, core{{/pix}} {{#str}}practice, local_casospracticos{{/str}}
                </a>
                {{#caninsert}}
                <a href="{{insertquizurl}}" class="btn btn-success">
                    {{#pix}}i/import, core{{/pix}} {{#str}}insertintoquiz, local_casospracticos{{/str}}
                </a>
                {{/caninsert}}
                {{/case.hasquestions}}
            </nav>
        </div>
    </div>

    {{! Case Statement }}
    <div class="case-statement card mb-4">
        <div class="card-header">
            <h5 class="mb-0">{{#str}}casestatement, local_casospracticos{{/str}}</h5>
        </div>
        <div class="card-body">
            {{{case.statement}}}
        </div>
    </div>

    {{! Questions Section }}
    <section class="case-questions" aria-labelledby="questions-heading">
        <h4 class="mb-3" id="questions-heading">
            {{#str}}questions, local_casospracticos{{/str}}
            <span class="badge bg-secondary" aria-hidden="true">{{case.questioncount}}</span>
            <span class="sr-only">{{case.questioncount}} {{#str}}questions, local_casospracticos{{/str}}</span>
        </h4>

        {{^questions}}
        <div class="alert alert-info" role="status">
            {{#str}}noquestions, local_casospracticos{{/str}}
            {{#canedit}}
            <a href="{{newquestionurl}}" class="alert-link">{{#str}}newquestion, local_casospracticos{{/str}}</a>
            {{/canedit}}
        </div>
        {{/questions}}

        {{#questions}}
        <article class="question-item card mb-3" data-questionid="{{id}}" aria-labelledby="question-{{id}}-title">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div id="question-{{id}}-title">
                    <span class="badge bg-primary me-2" aria-label="{{#str}}questionnumber, local_casospracticos{{/str}} {{number}}">#{{number}}</span>
                    <span class="badge bg-info">{{qtypelabel}}</span>
                    <span class="badge bg-secondary ms-2">{{defaultmark}} {{#str}}points, grades{{/str}}</span>
                </div>
                {{#canedit}}
                <nav class="question-actions" role="toolbar" aria-label="{{#str}}questionactions, local_casospracticos{{/str}}">
                    {{#canmoveup}}
                    <a href="{{moveupurl}}" class="btn btn-sm btn-link" aria-label="{{#str}}moveup{{/str}} {{#str}}question{{/str}} {{number}}">
                        {{#pix}}t/up, core{{/pix}}
                        <span class="sr-only">{{#str}}moveup{{/str}}</span>
                    </a>
                    {{/canmoveup}}
                    {{#canmovedown}}
                    <a href="{{movedownurl}}" class="btn btn-sm btn-link" aria-label="{{#str}}movedown{{/str}} {{#str}}question{{/str}} {{number}}">
                        {{#pix}}t/down, core{{/pix}}
                        <span class="sr-only">{{#str}}movedown{{/str}}</span>
                    </a>
                    {{/canmovedown}}
                    <a href="{{editurl}}" class="btn btn-sm btn-link" aria-label="{{#str}}edit{{/str}} {{#str}}question{{/str}} {{number}}">
                        {{#pix}}t/edit, core{{/pix}}
                        <span class="sr-only">{{#str}}edit{{/str}}</span>
                    </a>
                    <a href="{{deleteurl}}" class="btn btn-sm btn-link text-danger" aria-label="{{#str}}delete{{/str}} {{#str}}question{{/str}} {{number}}">
                        {{#pix}}t/delete, core{{/pix}}
                        <span class="sr-only">{{#str}}delete{{/str}}</span>
                    </a>
                </nav>
                {{/canedit}}
            </div>
            <div class="card-body">
                <div class="question-text mb-3">
                    {{{questiontext}}}
                </div>

                {{#answers.length}}
                <ul class="list-group" role="list" aria-label="{{#str}}answers, local_casospracticos{{/str}}">
                    {{#answers}}
                    <li class="list-group-item {{#iscorrect}}list-group-item-success{{/iscorrect}}" aria-label="{{#iscorrect}}{{#str}}correctanswer, local_casospracticos{{/str}}{{/iscorrect}}{{^iscorrect}}{{#str}}incorrectanswer, local_casospracticos{{/str}}{{/iscorrect}}">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                {{#iscorrect}}
                                {{#pix}}i/valid, core{{/pix}}
                                <span class="sr-only">{{#str}}correct{{/str}}</span>
                                {{/iscorrect}}
                                {{^iscorrect}}
                                {{#pix}}i/invalid, core{{/pix}}
                                <span class="sr-only">{{#str}}incorrect{{/str}}</span>
                                {{/iscorrect}}
                                {{{answer}}}
                            </div>
                            {{#showfraction}}
                            <span class="badge bg-info" aria-label="{{fraction}} {{#str}}percentgrade, grades{{/str}}">{{fraction}}%</span>
                            {{/showfraction}}
                        </div>
                        {{#feedback}}
                        <div class="answer-feedback mt-2 ps-4 text-muted small" role="note">
                            <em>{{#pix}}i/info, core{{/pix}} {{{feedback}}}</em>
                        </div>
                        {{/feedback}}
                    </li>
                    {{/answers}}
                </ul>
                {{/answers.length}}

                {{#generalfeedback}}
                <div class="alert alert-info mt-3 mb-0" role="note">
                    <strong>{{#str}}generalfeedback, local_casospracticos{{/str}}:</strong>
                    {{{generalfeedback}}}
                </div>
                {{/generalfeedback}}
            </div>
        </article>
        {{/questions}}
    </section>

    {{! Summary }}
    <div class="case-summary card mt-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <strong>{{#str}}numquestions, local_casospracticos, {{case.questioncount}}{{/str}}</strong>
                </div>
                <div class="col-md-4">
                    <strong>{{#str}}defaultmark, local_casospracticos{{/str}}:</strong> {{case.totalmarks}}
                </div>
                <div class="col-md-4 text-end">
                    <a href="{{backurl}}" class="btn btn-secondary">
                        {{#str}}backtocases, local_casospracticos{{/str}}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{{#js}}
require(['local_casospracticos/case_editor'], function(editor) {
    editor.init({{case.id}});
});
{{/js}}
