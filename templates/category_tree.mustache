{{!
    @template local_casospracticos/category_tree

    Template for displaying the category sidebar tree.

    Context variables required for this template:
    * categories - Array of category objects with depth info
    * currentcategoryid - Currently selected category ID
    * canmanage - Boolean for manage capability

    Example context (json):
    {
        "categories": [
            {"id": 1, "name": "Derecho Admin", "depth": 0, "casecount": 5, "isactive": true},
            {"id": 2, "name": "Silencio Admin", "depth": 1, "casecount": 2, "isactive": false}
        ],
        "currentcategoryid": 1,
        "canmanage": true
    }
}}
<div class="local-casospracticos-category-tree">
    <h4 class="mb-3">{{#str}}categories, local_casospracticos{{/str}}</h4>

    {{^categories}}
    <p class="text-muted">{{#str}}nocategories, local_casospracticos{{/str}}</p>
    {{/categories}}

    <ul class="list-group">
        {{! All categories option }}
        <li class="list-group-item d-flex justify-content-between align-items-center {{#isallactive}}active{{/isallactive}}">
            <a href="{{allurl}}" class="{{#isallactive}}text-white{{/isallactive}}">
                {{#str}}all{{/str}}
            </a>
            <span class="badge {{#isallactive}}bg-light text-dark{{/isallactive}}{{^isallactive}}bg-secondary{{/isallactive}}">
                {{totalcases}}
            </span>
        </li>

        {{#categories}}
        <li class="list-group-item d-flex justify-content-between align-items-center {{#isactive}}active{{/isactive}}"
            data-categoryid="{{id}}">
            <div class="category-name">
                {{#depth}}
                <span class="indent" style="margin-left: {{indent}}px;"></span>
                {{/depth}}
                <a href="{{url}}" class="{{#isactive}}text-white{{/isactive}}">
                    {{name}}
                </a>
            </div>
            <div class="category-actions d-flex align-items-center gap-2">
                <span class="badge {{#isactive}}bg-light text-dark{{/isactive}}{{^isactive}}bg-secondary{{/isactive}}">
                    {{casecount}}
                </span>
                {{#canmanage}}
                <div class="dropdown">
                    <button class="btn btn-sm btn-link p-0 {{#isactive}}text-white{{/isactive}}"
                            type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        {{#pix}}i/settings, core{{/pix}}
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="{{editurl}}">
                                {{#pix}}t/edit, core{{/pix}} {{#str}}edit{{/str}}
                            </a>
                        </li>
                        {{#candelete}}
                        <li>
                            <a class="dropdown-item text-danger" href="{{deleteurl}}">
                                {{#pix}}t/delete, core{{/pix}} {{#str}}delete{{/str}}
                            </a>
                        </li>
                        {{/candelete}}
                    </ul>
                </div>
                {{/canmanage}}
            </div>
        </li>
        {{/categories}}
    </ul>

    {{#canmanage}}
    <div class="mt-3">
        <a href="{{newcategoryurl}}" class="btn btn-sm btn-outline-primary w-100">
            {{#pix}}t/add, core{{/pix}} {{#str}}newcategory, local_casospracticos{{/str}}
        </a>
    </div>
    {{/canmanage}}
</div>
