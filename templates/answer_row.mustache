{{!
    @template local_casospracticos/answer_row

    Template for a single answer row in the question form.

    Context variables required for this template:
    * id - Answer ID (optional)
    * answer - Answer text
    * fraction - Fraction value (0-1)
    * feedback - Feedback text

    Example context (json):
    {
        "id": 1,
        "answer": "3 meses",
        "fraction": "1.0",
        "feedback": "Correcto según el artículo X"
    }
}}
<div class="answer-row card mb-2">
    <div class="card-body py-2">
        <input type="hidden" name="answer_id[]" value="{{id}}">
        <div class="row g-2">
            <div class="col-md-6">
                <input type="text" class="form-control form-control-sm" name="answer_text[]"
                       placeholder="{{#str}}answertext, local_casospracticos{{/str}}"
                       value="{{answer}}">
            </div>
            <div class="col-md-2">
                <select class="form-select form-select-sm" name="answer_fraction[]">
                    <option value="1.0" {{#fraction_100}}selected{{/fraction_100}}>100%</option>
                    <option value="0.5" {{#fraction_50}}selected{{/fraction_50}}>50%</option>
                    <option value="0.3333333" {{#fraction_33}}selected{{/fraction_33}}>33.33%</option>
                    <option value="0.25" {{#fraction_25}}selected{{/fraction_25}}>25%</option>
                    <option value="0.0" {{#fraction_0}}selected{{/fraction_0}}{{^fraction_100}}{{^fraction_50}}{{^fraction_33}}{{^fraction_25}}selected{{/fraction_25}}{{/fraction_33}}{{/fraction_50}}{{/fraction_100}}>0%</option>
                    <option value="-0.25" {{#fraction_n25}}selected{{/fraction_n25}}>-25%</option>
                    <option value="-0.5" {{#fraction_n50}}selected{{/fraction_n50}}>-50%</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control form-control-sm" name="answer_feedback[]"
                       placeholder="{{#str}}feedback, local_casospracticos{{/str}}"
                       value="{{feedback}}">
            </div>
            <div class="col-md-1">
                <button type="button" class="btn btn-sm btn-outline-danger remove-answer" title="{{#str}}delete{{/str}}">
                    {{#pix}}t/delete, core{{/pix}}
                </button>
            </div>
        </div>
    </div>
</div>
