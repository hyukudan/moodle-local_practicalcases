{{!
    @template local_casospracticos/question_form

    Template for the inline question editor modal.

    Context variables required for this template:
    * caseid - Case ID
    * question - Question object (optional, for editing)
    * qtypes - Array of question types

    Example context (json):
    {
        "caseid": 1,
        "qtypes": [
            {"value": "multichoice", "label": "Opción múltiple", "selected": true},
            {"value": "truefalse", "label": "Verdadero/Falso", "selected": false}
        ],
        "question": {
            "id": 1,
            "questiontext": "¿Cuál es...?",
            "qtype": "multichoice",
            "defaultmark": 1
        }
    }
}}
<div class="local-casospracticos-question-form" id="question-form-{{uniqid}}" role="dialog" aria-labelledby="question-form-title-{{uniqid}}">
    <h3 id="question-form-title-{{uniqid}}" class="sr-only">{{#question.id}}{{#str}}editquestion, local_casospracticos{{/str}}{{/question.id}}{{^question.id}}{{#str}}newquestion, local_casospracticos{{/str}}{{/question.id}}</h3>
    <form id="questionform-{{uniqid}}" data-caseid="{{caseid}}" aria-label="{{#str}}questionform, local_casospracticos{{/str}}">
        <input type="hidden" name="caseid" value="{{caseid}}">
        {{#question.id}}
        <input type="hidden" name="id" value="{{question.id}}">
        {{/question.id}}

        <div class="mb-3">
            <label for="qtype-{{uniqid}}" class="form-label">
                {{#str}}questiontype, local_casospracticos{{/str}}
            </label>
            <select class="form-select" id="qtype-{{uniqid}}" name="qtype" aria-describedby="qtype-help-{{uniqid}}">
                {{#qtypes}}
                <option value="{{value}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                {{/qtypes}}
            </select>
            <div id="qtype-help-{{uniqid}}" class="form-text sr-only">{{#str}}questiontype_help, local_casospracticos{{/str}}</div>
        </div>

        <div class="mb-3">
            <label for="questiontext-{{uniqid}}" class="form-label">
                {{#str}}questiontext, local_casospracticos{{/str}}
                <span class="text-danger" aria-hidden="true">*</span>
                <span class="sr-only">{{#str}}required{{/str}}</span>
            </label>
            <textarea class="form-control" id="questiontext-{{uniqid}}" name="questiontext"
                      rows="4" required aria-required="true">{{question.questiontext}}</textarea>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="defaultmark-{{uniqid}}" class="form-label">
                    {{#str}}defaultmark, local_casospracticos{{/str}}
                </label>
                <input type="number" class="form-control" id="defaultmark-{{uniqid}}"
                       name="defaultmark" value="{{#question.defaultmark}}{{question.defaultmark}}{{/question.defaultmark}}{{^question.defaultmark}}1{{/question.defaultmark}}"
                       min="0" step="0.1" aria-describedby="defaultmark-help-{{uniqid}}">
                <div id="defaultmark-help-{{uniqid}}" class="form-text sr-only">{{#str}}defaultmark_help, local_casospracticos{{/str}}</div>
            </div>
            <div class="col-md-6">
                <label for="shuffleanswers-{{uniqid}}" class="form-label">
                    {{#str}}shuffleanswers, local_casospracticos{{/str}}
                </label>
                <select class="form-select" id="shuffleanswers-{{uniqid}}" name="shuffleanswers">
                    <option value="1" {{#question.shuffleanswers}}selected{{/question.shuffleanswers}}>{{#str}}yes{{/str}}</option>
                    <option value="0" {{^question.shuffleanswers}}selected{{/question.shuffleanswers}}>{{#str}}no{{/str}}</option>
                </select>
            </div>
        </div>

        {{! Answers Section }}
        <fieldset class="answers-section mb-3" role="group" aria-labelledby="answers-label-{{uniqid}}">
            <legend id="answers-label-{{uniqid}}" class="form-label">{{#str}}answers, local_casospracticos{{/str}}</legend>
            <div id="answers-container-{{uniqid}}" class="answers-container" role="list" aria-live="polite">
                {{#question.answers}}
                {{> local_casospracticos/answer_row }}
                {{/question.answers}}
                {{^question.answers}}
                {{> local_casospracticos/answer_row }}
                {{> local_casospracticos/answer_row }}
                {{> local_casospracticos/answer_row }}
                {{> local_casospracticos/answer_row }}
                {{/question.answers}}
            </div>
            <button type="button" class="btn btn-sm btn-outline-secondary mt-2" id="add-answer-{{uniqid}}" aria-controls="answers-container-{{uniqid}}">
                {{#pix}}t/add, core{{/pix}} {{#str}}newanswer, local_casospracticos{{/str}}
            </button>
        </fieldset>

        <div class="mb-3">
            <label for="generalfeedback-{{uniqid}}" class="form-label">
                {{#str}}generalfeedback, local_casospracticos{{/str}}
            </label>
            <textarea class="form-control" id="generalfeedback-{{uniqid}}" name="generalfeedback"
                      rows="2" aria-describedby="generalfeedback-help-{{uniqid}}">{{question.generalfeedback}}</textarea>
            <div id="generalfeedback-help-{{uniqid}}" class="form-text sr-only">{{#str}}generalfeedback_help, local_casospracticos{{/str}}</div>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" data-action="cancel">
                {{#str}}cancel{{/str}}
            </button>
            <button type="submit" class="btn btn-primary">
                {{#str}}savechanges{{/str}}
            </button>
        </div>
    </form>
</div>
