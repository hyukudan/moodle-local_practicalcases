<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/casospracticos/db" VERSION="2026011102" COMMENT="local_casospracticos database tables"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <!-- Categorías de casos prácticos -->
    <TABLE NAME="local_cp_categories" COMMENT="Categories for practical cases">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Category name"/>
        <FIELD NAME="description" TYPE="text" NOTNULL="false" COMMENT="Category description"/>
        <FIELD NAME="descriptionformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="parent" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Parent category ID for hierarchy"/>
        <FIELD NAME="sortorder" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="contextid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="1" COMMENT="Moodle context ID"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="parent" UNIQUE="false" FIELDS="parent"/>
        <INDEX NAME="contextid" UNIQUE="false" FIELDS="contextid"/>
        <INDEX NAME="ctx_parent_sort" UNIQUE="false" FIELDS="contextid, parent, sortorder"/>
      </INDEXES>
    </TABLE>

    <!-- Casos prácticos (enunciados) -->
    <TABLE NAME="local_cp_cases" COMMENT="Practical cases with long statements">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="categoryid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Category ID"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Case name/title"/>
        <FIELD NAME="statement" TYPE="text" NOTNULL="true" COMMENT="Long statement/description of the case"/>
        <FIELD NAME="statementformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="draft" COMMENT="draft, pending_review, in_review, approved, published, archived"/>
        <FIELD NAME="difficulty" TYPE="int" LENGTH="2" NOTNULL="false" COMMENT="Difficulty level 1-5"/>
        <FIELD NAME="tags" TYPE="text" NOTNULL="false" COMMENT="JSON array of tags"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="createdby" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User ID who created"/>
        <FIELD NAME="version" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="1" COMMENT="Version number"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="categoryid" TYPE="foreign" FIELDS="categoryid" REFTABLE="local_cp_categories" REFFIELDS="id"/>
        <KEY NAME="createdby" TYPE="foreign" FIELDS="createdby" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="status" UNIQUE="false" FIELDS="status"/>
        <INDEX NAME="categoryid_status" UNIQUE="false" FIELDS="categoryid, status"/>
        <INDEX NAME="difficulty" UNIQUE="false" FIELDS="difficulty"/>
        <INDEX NAME="timecreated" UNIQUE="false" FIELDS="timecreated"/>
        <INDEX NAME="timemodified" UNIQUE="false" FIELDS="timemodified" COMMENT="For sorting by modification time"/>
        <INDEX NAME="createdby" UNIQUE="false" FIELDS="createdby" COMMENT="For filtering by creator"/>
        <INDEX NAME="cat_status_time" UNIQUE="false" FIELDS="categoryid, status, timemodified"/>
      </INDEXES>
    </TABLE>

    <!-- Preguntas de cada caso práctico -->
    <TABLE NAME="local_cp_questions" COMMENT="Questions belonging to a practical case">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="caseid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Case ID this question belongs to"/>
        <FIELD NAME="questiontext" TYPE="text" NOTNULL="true" COMMENT="Question text"/>
        <FIELD NAME="questiontextformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="qtype" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="multichoice" COMMENT="Question type: multichoice, truefalse, shortanswer"/>
        <FIELD NAME="defaultmark" TYPE="number" LENGTH="12" NOTNULL="true" DEFAULT="1" DECIMALS="7" COMMENT="Default points for this question"/>
        <FIELD NAME="sortorder" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="generalfeedback" TYPE="text" NOTNULL="false" COMMENT="Feedback shown after answering"/>
        <FIELD NAME="generalfeedbackformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="single" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" COMMENT="For multichoice: 1=single answer, 0=multiple"/>
        <FIELD NAME="shuffleanswers" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" COMMENT="Whether to shuffle answers"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="caseid" TYPE="foreign" FIELDS="caseid" REFTABLE="local_cp_cases" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="caseid_sortorder" UNIQUE="false" FIELDS="caseid, sortorder"/>
        <INDEX NAME="qtype" UNIQUE="false" FIELDS="qtype"/>
      </INDEXES>
    </TABLE>

    <!-- Respuestas de cada pregunta -->
    <TABLE NAME="local_cp_answers" COMMENT="Answers for practical case questions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="questionid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Question ID"/>
        <FIELD NAME="answer" TYPE="text" NOTNULL="true" COMMENT="Answer text"/>
        <FIELD NAME="answerformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="fraction" TYPE="number" LENGTH="12" NOTNULL="true" DEFAULT="0" DECIMALS="7" COMMENT="Score fraction: 1.0=correct, 0=wrong"/>
        <FIELD NAME="feedback" TYPE="text" NOTNULL="false" COMMENT="Feedback for this answer"/>
        <FIELD NAME="feedbackformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="sortorder" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="questionid" TYPE="foreign" FIELDS="questionid" REFTABLE="local_cp_questions" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="questionid_sortorder" UNIQUE="false" FIELDS="questionid, sortorder"/>
      </INDEXES>
    </TABLE>

    <!-- Audit Log -->
    <TABLE NAME="local_cp_audit_log" COMMENT="Audit log for all changes">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="objecttype" TYPE="char" LENGTH="50" NOTNULL="true" COMMENT="Type: case, question, category, answer"/>
        <FIELD NAME="objectid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="ID of the object"/>
        <FIELD NAME="action" TYPE="char" LENGTH="50" NOTNULL="true" COMMENT="Action: create, update, delete, publish, archive, etc"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User who performed the action"/>
        <FIELD NAME="changes" TYPE="text" NOTNULL="false" COMMENT="JSON of field changes (old/new values)"/>
        <FIELD NAME="ipaddress" TYPE="char" LENGTH="45" NOTNULL="false" COMMENT="IP address"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="objecttype_objectid" UNIQUE="false" FIELDS="objecttype, objectid"/>
        <INDEX NAME="userid_time" UNIQUE="false" FIELDS="userid, timecreated"/>
        <INDEX NAME="action" UNIQUE="false" FIELDS="action"/>
        <INDEX NAME="timecreated" UNIQUE="false" FIELDS="timecreated"/>
      </INDEXES>
    </TABLE>

    <!-- Case Reviews (Workflow) -->
    <TABLE NAME="local_cp_reviews" COMMENT="Case review workflow">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="caseid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Case being reviewed"/>
        <FIELD NAME="reviewerid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User assigned as reviewer"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="pending" COMMENT="pending, approved, rejected, revision_requested"/>
        <FIELD NAME="comments" TYPE="text" NOTNULL="false" COMMENT="Reviewer comments"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="caseid" TYPE="foreign" FIELDS="caseid" REFTABLE="local_cp_cases" REFFIELDS="id"/>
        <KEY NAME="reviewerid" TYPE="foreign" FIELDS="reviewerid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="caseid_status" UNIQUE="false" FIELDS="caseid, status"/>
        <INDEX NAME="reviewerid_status" UNIQUE="false" FIELDS="reviewerid, status"/>
      </INDEXES>
    </TABLE>

    <!-- Case Usage Tracking -->
    <TABLE NAME="local_cp_usage" COMMENT="Track case usage in quizzes">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="caseid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Case ID"/>
        <FIELD NAME="quizid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="Quiz ID where used"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="Course ID"/>
        <FIELD NAME="views" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="View count"/>
        <FIELD NAME="insertions" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Times inserted into quiz"/>
        <FIELD NAME="lastused" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="Last time used"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="caseid" TYPE="foreign" FIELDS="caseid" REFTABLE="local_cp_cases" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="caseid_quizid" UNIQUE="true" FIELDS="caseid, quizid"/>
        <INDEX NAME="views" UNIQUE="false" FIELDS="views"/>
      </INDEXES>
    </TABLE>

    <!-- Practice Attempts -->
    <TABLE NAME="local_cp_practice_attempts" COMMENT="Track practice mode attempts">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="caseid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Case ID"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User ID"/>
        <FIELD NAME="score" TYPE="number" LENGTH="12" NOTNULL="true" DEFAULT="0" DECIMALS="5" COMMENT="Score obtained"/>
        <FIELD NAME="maxscore" TYPE="number" LENGTH="12" NOTNULL="true" DEFAULT="0" DECIMALS="5" COMMENT="Maximum possible score"/>
        <FIELD NAME="percentage" TYPE="number" LENGTH="5" NOTNULL="true" DEFAULT="0" DECIMALS="2" COMMENT="Score percentage"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="in_progress" COMMENT="in_progress, finished, abandoned"/>
        <FIELD NAME="timestarted" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timefinished" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="caseid" TYPE="foreign" FIELDS="caseid" REFTABLE="local_cp_cases" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="caseid_userid" UNIQUE="false" FIELDS="caseid, userid"/>
        <INDEX NAME="userid" UNIQUE="false" FIELDS="userid" COMMENT="For user-specific queries"/>
        <INDEX NAME="userid_status" UNIQUE="false" FIELDS="userid, status" COMMENT="For user attempts by status"/>
        <INDEX NAME="status" UNIQUE="false" FIELDS="status"/>
        <INDEX NAME="timefinished" UNIQUE="false" FIELDS="timefinished"/>
      </INDEXES>
    </TABLE>

    <!-- Practice Responses (per question) -->
    <TABLE NAME="local_cp_practice_responses" COMMENT="Individual question responses in practice mode">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="attemptid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Practice attempt ID"/>
        <FIELD NAME="questionid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Question ID"/>
        <FIELD NAME="response" TYPE="text" NOTNULL="false" COMMENT="User response (JSON for multichoice)"/>
        <FIELD NAME="score" TYPE="number" LENGTH="12" NOTNULL="true" DEFAULT="0" DECIMALS="5"/>
        <FIELD NAME="iscorrect" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="attemptid" TYPE="foreign" FIELDS="attemptid" REFTABLE="local_cp_practice_attempts" REFFIELDS="id"/>
        <KEY NAME="questionid" TYPE="foreign" FIELDS="questionid" REFTABLE="local_cp_questions" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="attemptid_questionid" UNIQUE="true" FIELDS="attemptid, questionid"/>
        <INDEX NAME="questionid_iscorrect" UNIQUE="false" FIELDS="questionid, iscorrect"/>
      </INDEXES>
    </TABLE>

    <!-- User Achievements -->
    <TABLE NAME="local_cp_achievements" COMMENT="User achievements for gamification">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="User ID"/>
        <FIELD NAME="achievementtype" TYPE="char" LENGTH="50" NOTNULL="true" COMMENT="Type of achievement"/>
        <FIELD NAME="caseid" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="Related case ID if applicable"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid_type" UNIQUE="true" FIELDS="userid, achievementtype"/>
        <INDEX NAME="achievementtype" UNIQUE="false" FIELDS="achievementtype"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
